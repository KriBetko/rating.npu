{% extends '::admin.html.twig' %}

{% block title %} Інститути{% endblock %}

{% block body -%}

    <h1>Інститути</h1>
    <br><br>
    <a class="btn btn-primary" href="{{ path('institutes') }}">
        {{ 'Назад' }}
    </a>
    <br><br>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Назва</th>
                <th>Опис</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>


        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('institute_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a class="btn btn-info btn-mini" href="{{ path('institute_edit', { 'id': entity.id }) }}">
                        <span  class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>

        {% endfor %}

        </tbody>
    </table>
<br><br>

    <a class="btn btn-success" href="{{ path('institute_new') }}">
        {{ 'Додати Інститут' }}
    </a>
{% endblock %}
