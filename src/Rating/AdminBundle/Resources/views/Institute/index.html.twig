{% extends '::admin.html.twig' %}

{% block title %} Факультети{% endblock %}

{% block body -%}
    <a class="btn btn-primary" href="{{ path('admin_index') }}">{{ 'Назад' }}</a>
    <a class="btn btn-success pull-right" href="{{ path('institute_new') }}">{{ 'Додати Факультет' }}</a>
    <br>
    <h1>Факультети</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Назва</th>
                <th>Опис</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>


        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('institute_edit', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a class="btn btn-info btn-mini" href="{{ path('institute_edit', { 'id': entity.id }) }}">
                        <span  class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>

        {% endfor %}

        </tbody>
    </table>
    <br>
{% endblock %}
