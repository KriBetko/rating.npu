<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="rating.registration.form.type" class="Rating\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="rating_user_registration" />
        </service>
        <service id="rating.form.handler.registration" class="Rating\UserBundle\Form\Handler\RegistrationFormHandler" scope="request" public="false">
            <argument type="service" id="rating.registration.form.type" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
            <argument type="service" id="fos_user.mailer" />
        </service>
    </services>

</container>



