{% extends '@RatingAdmin/index.html.twig' %}

{% block title %}Групи критеріїв{% endblock %}

{% block content %}
    <div id="wrapper" class="after-navbar-admin container">
        <div class="row">
            <h2>
                Групи кртеріїв
                <span class="pull-right">
                    <a class="btn btn-success pull-right" href="{{ path('group_new') }}">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        Додати Групу
                    </a>
                </span>
            </h2>
        </div>
        <br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Назва</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="col-md-1"><a href="{{ path('group_edit', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td class="td-center col-md-1">
                        <a class="btn btn-info btn-mini" href="{{ path('group_edit', { 'id': entity.id }) }}">
                            <span  class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
