{% extends '::admin.html.twig' %}
{% block title %} Групи критеріїв{% endblock %}
{% block body -%}
    <a class="btn btn-primary" href="{{ path('admin_index') }}">
        {{ 'Назад' }}
    </a>
    <br>
    <h1>Групи кртеріїв</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Назва</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('group_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>


                        <a class="btn btn-info btn-mini" href="{{ path('group_edit', { 'id': entity.id }) }}">
                            <span  class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a class="btn btn-success" href="{{ path('group_new') }}">
        {{ 'Додати Групу' }}
    </a>
    {% endblock %}
