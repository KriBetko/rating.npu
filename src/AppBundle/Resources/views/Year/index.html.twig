{% extends '@RatingAdmin/index.html.twig' %}

{% block title %}Навчальні роки{% endblock %}

{% block content %}
    <div class="row">
        <h2>
            Навчальні роки
            <span class="pull-right">
                <a class="btn btn-success pull-right" href="{{ path('year_new') }}">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Додати Рік
                </a>
            </span>
        </h2>
    </div>
    <br>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Назва</th>

            <th>Дії</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr {% if entity.active == true %}style="background-color: lavender"{% endif %}>
                <td class="col-md-1"><a href="{{ path('year_edit', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.title }}</td>
                <td class="td-center col-md-2">
                    <a class="btn btn-info btn-mini" href="{{ path('year_edit', { 'id': entity.id }) }}"
                       title="Редагувати">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a class="btn btn-success btn-mini" href="{{ path('generate_measures', { 'year': entity.id }) }}"
                       title="Створити критерії для цього року">
                        <span class="glyphicon glyphicon-cd" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
