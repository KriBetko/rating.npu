{% extends '::admin.html.twig' %}
{% block title %} Категорії{% endblock %}
{% block body -%}
    <a class="btn btn-primary" href="{{ path('admin_index') }}">
        {{ 'Назад' }}
    </a>
    <br>
    <h1>Категорії</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Назва</th>
                <th>Тип</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_edit', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.textType }}</td>
                <td>
                    <a class="btn btn-info btn-mini" href="{{ path('category_edit', { 'id': entity.id }) }}">
                        <span  class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a class="btn btn-success" href="{{ path('category_new') }}">
        {{ 'Додати Критерій' }}
    </a>
    {% endblock %}
