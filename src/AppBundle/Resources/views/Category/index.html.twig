{% extends '@RatingAdmin/index.html.twig' %}

{% block title %}Категорії{% endblock %}

{% block content %}
    <div class="row">
        <div class="row">
            <h2>
                Категорії
                <span class="pull-right">
                <a class="btn btn-success pull-right" href="{{ path('category_new') }}">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Додати Категорію
                </a>
            </span>
            </h2>
        </div>
        <br>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Назва</th>
                <th>Тип</th>
                <th>Дії</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="col-md-1"><a href="{{ path('category_edit', { 'id': entity.id }) }}">{{ loop.index }}</a>
                    </td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.textType }}</td>
                    <td class="td-center col-md-1">
                        <a class="btn btn-info btn-mini" href="{{ path('category_edit', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}