{% extends "@Admin/index.html.twig" %}

{% block title %}Кафедри{% endblock %}

{% block content %}
    <div class="row">
        <h1>
            Кафедри
            <span class="pull-right">
                <a class="btn btn-success pull-right" href="{{ path('cathedra_new') }}">
                    Додати Кафедру
                </a>
            </span>
        </h1>
    </div>
    <br>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th>Опис</th>
            <th>Факультет</th>
            <th>Дії</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="td-center col-md-1"><a
                            href="{{ path('cathedra_edit', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.institute.title }}</td>
                <td class=" td-center col-md-1">
                    <a class="btn btn-info btn-mini" href="{{ path('cathedra_edit', { 'id': entity.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
