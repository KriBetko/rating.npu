<div class="container">
    <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            {% set currentPath = app.request.attributes.get('_route') %}

            {% if currentPath == 'my_profile' or currentPath == 'my_profile_edit' %}
                <li class="active">
                    <a href="{{ path('my_profile') }}">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        Мій Профіль
                    </a>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('my_profile') }}">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        Мій Профіль
                    </a>
                </li>
            {% endif %}

            <li {% if currentPath == 'my_measure' %}class="active"{% endif %}>
                <a href="{{ path('my_measure') }}">
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                    Особова картка
                </a>
            </li>

            {% if is_granted('ROLE_ADMIN') %}
                <li {% if currentPath == 'cathedras_list' %}class="active"{% endif %}>
                    <a href="{{ path('cathedras_list') }}">
                        <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
                        Підрозділи
                    </a>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                       aria-expanded="false">
                        <span class="glyphicon glyphicon-object-align-bottom" aria-hidden="true"></span>
                        Рейтинги
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('rating_teachers') }}">Викладачів</a></li>
                        <li><a>Кафедр</a></li>
                        <li><a>Факультетів</a></li>
                        <li><a {#href="{{ path('rating_students') }}"#}>Студентів</a></li>
                    </ul>
                </li>
            {% endif %}
        </ul>
        <ul class="nav navbar-nav navbar-right">
            {% if is_granted('ROLE_ADMIN') %}
                {% if currentPath == 'admin_index'
                or currentPath == 'user'
                or currentPath == 'position'
                or currentPath == 'institutes'
                or currentPath == 'cathedras' %}
                    <li class="active">
                        <a href="{{ path('admin_index') }}">
                            Адміністративна панель
                            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('admin_index') }}">
                            Адміністративна панель
                            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                        </a>
                    </li>
                {% endif %}

            {% endif %}
            <li>
                <a href="{{ path('logout') }}">
                    Вийти
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                </a>
            </li>
        </ul>
    </div>
</div>