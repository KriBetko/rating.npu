<table class="table table-bordered">
    <thead>
    <tr>
        <th>Факультет</th>
        <th>Форма навчання</th>
        <th>Рік вступу</th>
        <th>Група</th>
        <th>Спеціалізація</th>
        {% if block %}
            <th>Дії</th>{% endif %}
    </tr>
    </thead>

    {% for job in jobs %}
        <tr>
            <td class="text-center">{{ job.institute.title }}</td>
            <td class="text-center">{{ job.formList[job.formEducation] }}</td>
            <td class="text-center">{{ job.entryYear|date('Y') }}</td>
            <td class="text-center">{{ job.group }}</td>
            <td class="text-center">{{ job.specialization }}</td>
            {% if block %}
            <td class="text-center">
                <a data-target="#modalEditJob" data-toggle="modal" class="btn btn-info btn-xs edit-job-link"
                   data-id="{{ job.id }}" data-href="{{ path('profile_edit_job') }}" title="Редагувати">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <span data-target="#modalRemoveJob" data-toggle="modal" class="btn btn-danger btn-xs remove-job-link"
                      data-id="{{ job.id }}" title="Видалити">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </span>
            </td>
            {% endif %}
        </tr>
    {% endfor %}
</table>