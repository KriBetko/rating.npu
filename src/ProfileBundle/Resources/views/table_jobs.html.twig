<table class="table table-bordered">
    <thead>
    <tr>
        <th>Факультет</th>
        <th>Кафедра</th>
        <th>Посада</th>
        <th>Ставка</th>
        <th>Форма працевлаштування</th>
        <th>Редагувати</th>
    </tr>
    </thead>

    {% for job in jobs %}
        <tr>
            <td class="text-center">{{ job.cathedra.institute.title }}</td>
            <td class="text-center">{{ job.cathedra.title }}</td>
            <td class="text-center">{{ job.position.title }}</td>
            <td class="text-center">{{ job.bet }}</td>
            <td class="text-center">{% if job.additional == 1 %}За сумісництвом{% else %}Основне{% endif %}</td>
            <td class="text-center">
                <a data-target="#modalEditJob" data-toggle="modal" class="btn btn-info btn-xs edit-job-link"
                   data-id="{{ job.id }}" data-href="{{ path('profile_edit_job') }}" title="Редагувати">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <span data-target="#modalRemoveJob" data-toggle="modal" class="btn btn-danger btn-xs remove-job-link"
                      data-id="{{ job.id }}" title="Видалити">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </span>
            </td>
        </tr>

    {% endfor %}
</table>