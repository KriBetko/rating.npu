<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets  filter='cssrewrite'
            '@RatingMainBundle/Resources/public/css/reset.css'
            '@RatingMainBundle/Resources/public/css/bootstrap.min.css'
            '@RatingMainBundle/Resources/public/css/bootstrap-theme.min.css'
            '@RatingMainBundle/Resources/public/less/*'
            output='css/general.css'
            %}
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <header style="height: 50px"></header>
        <div id="wrapper" class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {% javascripts
            '@RatingMainBundle/Resources/public/scripts/jquery.min.js'
            '@RatingMainBundle/Resources/public/scripts/bootstrap.min.js'
            '@RatingMainBundle/Resources/public/scripts/*'
            %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
